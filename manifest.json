{
  "manifest_version": 3,
  "name": "The Guild Helper",
  "version": "1.1.2",
  "browser_specific_settings": {
    "gecko": {
      "id": "web-extension@the-guild.dev",
      "update_url": "https://github.com/EmrysMyrddin/the-guild-web-extension/tree/main/hosting/firefox/updates.json"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "src/content_script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background.js",
    "scripts": [
      "src/background.js"
    ]
  },
  "host_permissions": [
    "https://github.com/",
    "https://notion-tasks-dashboard-proxy.theguild.workers.dev/"
  ],
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": false
  }
}